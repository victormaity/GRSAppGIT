@{
    ViewBag.Title = "Sikuli Object Repository";
}
<script src="../../Scripts/sikuliSupport.js"></script>
<script src="@Url.Content("~/Content/assets/js/dropzone.js")"></script>
@model  List<GlobalReportingSystem.Core.Models.Entities.SikuliObject>
<div class="page-header">
    <h1>Sikuli Object Repository
    </h1>
</div>
<div class="col-xs-12">
    <div class="widget-box">
        <div class="widget-header">
            <h5 class="widget-title" id="notation">List of uploaded objects
                <img align='middle' src='@Url.Content("~/Content/assets/css/images/loading.gif")'/>
            </h5>

            <!-- #section:custom/widget-box.toolbar -->
            <div class="widget-toolbar">
                <div class="widget-menu">
                    <a href="#modal-form" data-action="settings" role="button" data-toggle="modal">
                        <i class="ace-icon fa fa-plus"></i>
                    </a>
                </div>
            </div>

            <!-- /section:custom/widget-box.toolbar -->
        </div>
        <div class="widget-body">
            <div class="widget-main">
                <table id="testcyclestable" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Added By</th>
                            <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample-table-2" rowspan="1" colspan="1" aria-label="
														
														Update
													: activate to sort column ascending">
                                <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                Added On
                            </th>
                            <th>Modified By</th>
                            <th>
                                <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                Modified On
                            </th>
                            <th>Object</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sikuliObject in Model)
                        {
                            <tr>
                                <td id="RPcategory-@sikuliObject.ID">
                                    @sikuliObject.cathegory
                                </td>
                                <td id="RPname-@sikuliObject.ID">
                                    @sikuliObject.name
                                </td>
                                <td id="RPdescription-@sikuliObject.ID">
                                    @sikuliObject.description
                                </td>
                                <td>
                                    @sikuliObject.User.UserName
                                </td>
                                <td>
                                    @sikuliObject.addedOn
                                </td>
                                <td id="RPmodifiedBy-@sikuliObject.ID">
                                    @sikuliObject.User1.UserName
                                </td>
                                <td id="RPmodifiedOn-@sikuliObject.ID">
                                    @sikuliObject.modifiedOn
                                </td>
                                <td>
                                    @if (sikuliObject.contentType != null)
                                    {
                                        @Html.Raw("<img id='obj-"+sikuliObject.ID+"'enlarged='false' onclick='enlargeObject("+sikuliObject.ID+");' style='max-width: 40px; max-height: 40px' src=\"data:image/" + sikuliObject.contentType.Replace(".", "") + ";base64,"
                                                  + Convert.ToBase64String(sikuliObject.content) + "\" />")
                                    }
                                    @*   @{ <img src="@{ new FileContentResult(((byte[]) sikuliObject.content), "image/"+sikuliObject.contentType.Replace(".","")); }" />
                                   <img id="obj-@sikuliObject.ID"  enlarged="false" onclick="enlargeObject(@sikuliObject.ID);" style="max-width: 40px; max-height: 40px" src="@Url.Action("GetImage", new { sikuliObjectID = sikuliObject.ID })" />*@
                                </td>
                                <td class=" ">
                                    <div class="hidden-sm hidden-xs action-buttons">

                                        <a href="#update-@sikuliObject.ID" data-action="settings" role="button" data-toggle="modal" class="green" onclick="showForm('@sikuliObject.ID','false') ">
                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                        </a>
                                        <div aria-hidden="true" class="modal in" id="update-@sikuliObject.ID" style="display: none;" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">×</button>
                                                        <h4 class="blue bigger">You can change following fields</h4>
                                                    </div>
                                                    <div>
                                                        @{ Html.RenderPartial("UpdateSikuliObject", sikuliObject);}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <a class="red" onclick="removeSikuliObject(@sikuliObject.ID);" id="remove-@sikuliObject.ID">
                                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div aria-hidden="true" class="modal in" id="modal-form" style="display: none;" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="reloadPage()">×</button>
                <h4 class="blue bigger">Please add new object</h4>
            </div>
            <div>
                <div id="my-awesome-dropzone">
                    <div class="dz-default dz-message" id="dropzone">
                        <span class="dz-message dz-clickable"><span class="bigger-150 bolder"><i class="ace-icon fa fa-caret-right red"></i>Drop files</span> to upload 				<span class="smaller-80 grey">(or click)</span>
                            <br>
                            <i class="upload-icon ace-icon fa fa-cloud-upload blue fa-3x dz-clickable"></i></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    jQuery(function ($) {

        Dropzone.autoDiscover = false;
        try {
            var myDropzone = new Dropzone("#dropzone", {
                paramName: "files", // The name that will be used to transfer the file
                maxFilesize: 20, // MB
                url: '@Url.Action("UploadSikuliObjects")',
                addRemoveLinks: false,
                uploadMultiple: true,
                clickable: true,
                dictDefaultMessage:
                    '<span class="bigger-150 bolder"><i class="ace-icon fa fa-caret-right red"></i> Drop files</span> to upload \
				<span class="smaller-80 grey">(or click)</span> <br /> \
				<i class="upload-icon ace-icon fa fa-cloud-upload blue fa-3x"></i>',
                dictResponseError: 'Error while uploading file!',
                accept: function (file, done) {
                    if (file.name.toLowerCase().search('.jpg') != -1 || file.name.toLowerCase().search('.png') != -1 || file.name.toLowerCase().search('.bmp') != -1) {
                        done();
                    } else {
                        ShowMessage("Error", file.name + ",can not be uploaded, wrong file format");
                    }
                },
                //change the previewTemplate to use Bootstrap progress bars
                previewTemplate: "<div class=\"dz-preview dz-file-preview\">\n  <div class=\"dz-details\">\n    <div class=\"dz-filename\"><span data-dz-name></span></div>\n    <div class=\"dz-size\" data-dz-size></div>\n    <img data-dz-thumbnail />\n  </div>\n  <div class=\"progress progress-small progress-striped active\"><div class=\"progress-bar progress-bar-success\" data-dz-uploadprogress></div></div>\n    <div class=\"dz-error-message\"><span data-dz-errormessage></span></div>\n</div>"
            });
            myDropzone.options.dropzoneForm = {
                init: function () {
                    myDropzone.on("complete", function () {
                     //   location.reload();
                        
                    });
                }
            };
            myDropzone.on("complete", function () {
                //setTimeout("location.reload();", 5000);
            });
        } catch (e) {
            alert('Dropzone.js does not support older browsers!');
        }

    });
    function reloadPage() {
        location.reload();
    }
    function removeSikuliObject(id) {
        $.ajax({
            type: "POST",
            url: "@Url.Action("DeleteSikuliObjects")",
            data: "{ 'id': " + id + "}",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            afterSend: function () {

            },
            /*  error: function (request, status, error)
              { ShowMessage("Error", error); },*/
            success: function (msg) {
                ShowMessage(msg.type, msg.text);
                if (msg.type != "Error")
                    $("#remove-" + id).remove();
                // location.reload();
            }
        });
    }
    
    $(document).ready(function(){

        $("#notation").html("List of uploaded objects");
    });

    function enlargeObject(id) {
        if ($("#obj-" + id).attr("enlarged") == "true") {
            $("#obj-" + id).attr("enlarged", "false");
            $("#obj-" + id).attr("style", "max-width: 40px; max-height: 40px");
        } else {
            $("#obj-" + id).attr("enlarged", "true");
            $("#obj-" + id).attr("style", "max-width: 500px; max-height: 500px");
        }
    }
</script>
