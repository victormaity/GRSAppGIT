@{
    ViewBag.Title = "Machines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using GlobalReportingSystem.Core.Abstract.BL.Helper
@using Microsoft.Practices.ServiceLocation
@model GlobalReportingSystem.Core.Models.GRS.ExecutionMachniesModel
<div class="page-header">
    <h1>Machines
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Create or assign new machines for project
        </small>
    </h1>
</div>

<div class="widget-container-col ui-sortable">
    <!-- #section:custom/widget-box -->
    <div class="widget-box">
        <div class="widget-header">
            <h5 class="widget-title">@ViewBag.FilterType</h5>

            <!-- #section:custom/widget-box.toolbar -->
            <div class="widget-toolbar">
                <div class="widget-menu">
                    <a href="" data-action="settings" data-toggle="dropdown">
                        <i class="ace-icon fa fa-bars"></i>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-right dropdown-light-blue dropdown-caret dropdown-closer">
                        <li>
                            <a href="@Url.Action("Machines", "Configuration", new { @filter = "free" })"><i class="fa fa-child"></i>&nbsp;Display only free machines</a>
                        </li>

                        <li>
                            <a href="@Url.Action("Machines", "Configuration", new { @filter = "assigned" })"><i class="fa fa-flag-o"></i>&nbsp;Display machines for current project</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Machines", "Configuration")"><i class="fa fa-asterisk"></i>&nbsp;Display all machines</a>
                        </li>

                    </ul>
                    <a href="#modal-form" data-action="settings" role="button" data-toggle="modal">
                        <i class="ace-icon fa fa-plus"></i>
                    </a>
                </div>
            </div>

            <!-- /section:custom/widget-box.toolbar -->
        </div>
        <div class="widget-body">
            <div class="widget-main">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert">
                            <i class="ace-icon fa fa-times"></i>
                        </button>

                        <strong>
                            <i class="ace-icon fa fa-times"></i>
                            Error!
                        </strong>

                        @ViewBag.ErrorMessage
                        <br>
                    </div>
                }
                <table id="testcyclestable" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>IP</th>
                            <th>Added By</th>
                            <th>Added On</th>
                            <th>Current Project</th>
                            <th>Windows</th>
                            <th>IE</th>
                            <th>Firefox</th>
                            <th>Chrome</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var machine in Model.Machines)
                        {
                            <tr>
                                <td>
                                    @if (machine.Project != null && machine.Project.ID == (ServiceLocator.Current.GetInstance<ISessionHelper>().GetSessionDetails(User).Project.ID))
                                    {
                                        <a href="@Url.Action("DeleteMachines", "Configuration", new { @id = machine.ID })" data-action="settings" role="button" data-toggle="modal">
                                            <i class="ace-icon fa fa-times"></i>
                                        </a>
                                    }
                                </td>
                                <td>@machine.RemoteMachineIP</td>
                                <td>@machine.User.USerFullName</td>
                                <td>@machine.AddedDate.ToString("d")</td>
                                <td>@(machine.Project == null ? "Free" : machine.Project.DisplayName)</td>
                                <td>@machine.windowsversion</td>
                                <td>@machine.Ie</td>
                                <td>@machine.Firefox</td>
                                <td>@machine.Chome</td>
                                <td>
                                    @if (machine.Project == null)
                                    {
                                        <a class="green"  title="Take Machine" href="@Url.Action("AssignMachineToProject", "Configuration", new { @id = machine.ID })">
                                            <i class="ace-icon fa fa-child bigger-130"></i>
                                        </a>
                                    }
                                    else
                                        if (machine.Project.ID == (ServiceLocator.Current.GetInstance<ISessionHelper>().GetSessionDetails(User).Project.ID))
                                        {
                                        <a class="green" title="Release Machine" href="@Url.Action("ReleaseMachine", "Configuration", new { @id = machine.ID })">
                                            <i class="ace-icon fa fa-flag-o bigger-130"></i>
                                        </a>
                                        }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div aria-hidden="true" class="modal" id="modal-form" style="display: none;" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="blue bigger">Please fill the following fields</h4>
            </div>

            @using (Html.BeginForm("Machines", "Configuration", FormMethod.Post))
            {
                <div class="modal-body">
                    <div>
                        <label for="form-field-mask-1">
                            IP Adress
                            <small class="text-success">(display)</small>
                        </label>

                        <!-- #section:plugins/input.masked-input -->
                        <div class="input-group">
                            @Html.TextBoxFor(p => p.Client.RemoteMachineIP, new { @class = "form-control" })
                            @* <input class="" type="text" id="form-field-mask-1">*@
                            <span class="input-group-btn">
                                <p class="btn btn-sm btn-default">
                                    <i class="ace-icon fa fa-pencil bigger-110"></i>
                                </p>
                            </span>
                        </div>

                        <!-- /section:plugins/input.masked-input -->
                    </div>
                    <hr />
                </div>
           
                <div class="modal-footer">
                    <button class="btn btn-sm" data-dismiss="modal">
                        <i class="ace-icon fa fa-times"></i>
                        Cancel
                    </button>

                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="ace-icon fa fa-check"></i>
                        Add
                    </button>
                </div>
            }
        </div>
    </div>
</div>
